model Organization {
  id           String             @id @default(uuid())
  nome         String             @unique
  mspId        String             @unique
  peerEndpoint String
  peerName     String
  status       OrganizationStatus @default(PENDENTE)
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  // Relacionamentos
  users User[]

  @@index([status])
}

enum OrganizationStatus {
  PENDENTE
  ATIVA
  INATIVA
}
