model Approval {
  id            String         @id @default(uuid())
  role          ApprovalRole
  status        ApprovalStatus @default(PENDING)
  justification            String?
  cryptographicSignature   String? // Base64 encoded signature using org certificate
  approvedAt               DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  documentId String
  document   Document @relation(fields: [documentId], references: [id])
  approverId String?
  approver   User?    @relation(fields: [approverId], references: [id])

  certificate UserCertificate?

  @@unique([documentId, role, approverId])
  @@index([documentId])
  @@index([approverId])
  @@index([status])
}

enum ApprovalRole {
  COORDINATOR
  ADVISOR
  STUDENT
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}
