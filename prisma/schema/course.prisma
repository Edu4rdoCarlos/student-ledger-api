model Course {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  coordinatorId String?
  coordinator   Coordinator? @relation("CourseCoordinator", fields: [coordinatorId], references: [id])

  students Student[]
  advisors Advisor[]

  @@index([coordinatorId])
}
