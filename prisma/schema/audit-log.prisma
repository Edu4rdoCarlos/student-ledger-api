model AuditLog {
  id          String   @id @default(uuid())
  entityType  String // Document, Approval, Defense, etc.
  entityId    String?
  action      String // created, updated, approved, rejected, submitted, archived
  performedBy String?
  performedAt DateTime @default(now())
  details     Json?

  @@index([entityType, entityId])
  @@index([action])
  @@index([performedBy])
}
