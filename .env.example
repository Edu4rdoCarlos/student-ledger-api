# Application
NODE_ENV=development
PORT=3000

# PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/student_ledger?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Hyperledger Fabric
FABRIC_DEFAULT_ORG="coordenacao"
FABRIC_CHANNEL="studentchannel"
FABRIC_CHAINCODE="student-ledger"

# Fabric - Coordenação
FABRIC_COORDENACAO_MSP_ID="CoordenacaoMSP"
FABRIC_COORDENACAO_PEER_ENDPOINT="localhost:7051"
FABRIC_COORDENACAO_PEER_NAME="peer0.coordenacao.ifal.local"

# Fabric - Orientador
FABRIC_ORIENTADOR_MSP_ID="OrientadorMSP"
FABRIC_ORIENTADOR_PEER_ENDPOINT="localhost:8051"
FABRIC_ORIENTADOR_PEER_NAME="peer0.orientador.ifal.local"

# Fabric - Aluno
FABRIC_ALUNO_MSP_ID="AlunoMSP"
FABRIC_ALUNO_PEER_ENDPOINT="localhost:9051"
FABRIC_ALUNO_PEER_NAME="peer0.aluno.ifal.local"

# IPFS
IPFS_API_URL="http://localhost:5001"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# Email - Google SMTP (alternative)
GOOGLE_SMTP_HOST=
GOOGLE_SMTP_PORT=
GOOGLE_SMTP_SECURE=
GOOGLE_SMTP_USER=
GOOGLE_SMTP_PASSWORD=
GOOGLE_SMTP_FROM_EMAIL=
GOOGLE_SMTP_FROM_NAME=

# Encryption
ENCRYPTION_MASTER_KEY=
